FROM ghcr.io/tenstorrent/tt-metal/tt-metalium/ubuntu-22.04-amd64:latest
SHELL ["/bin/bash", "-c"]

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && apt-get install -y \
    ssh \
    rsync \
    sudo \
    wget \
    vim \
    nano \
    tmux \
    python3-dev \
    python3-venv \
    python3-pip \
    clangd
